<div class="form-container sign-in">
    <form id="signInForm" action="/sign-in" method="POST">
        <h1>Sign In</h1>
        <div class="social-icons">
            <a href="/auth/google" class="icons"><i class='bx bxl-google'></i></a>
            <!-- <a href="#" class="icons"><i class='bx bxl-facebook'></i></a>
            <a href="#" class="icons"><i class='bx bxl-github'></i></a>
            <a href="#" class="icons"><i class='bx bxl-linkedin'></i></a> -->
        </div>

        <% if (message.success && message.success.length > 0) { %>
            <div class="alert alert-success flash-message" role="alert" style="color: green;background-color: transparent; border: none; outline: none;">
                <%= message.success %>
            </div>
        <% } %>
        
        <% if (message.error && message.error.length > 0) { %>
            <div class="alert alert-danger flash-message" role="alert" style="color: red;background-color: transparent; border: none; outline: none;">
                <%= message.error %>
            </div>
        <% } %>
        
        <span>Login With Email & Password</span>
        <input type="email" id="email" name="email" placeholder="Enter E-mail" >
        <!-- Email error message -->
        <span id="emailError" style="color: red;"></span>

        <!-- Password input -->
        <input type="password" id="password" name="password" placeholder="Enter Password" >
        <!-- Password error message -->
        <span id="passwordError" style="color: red;"></span>

        <a href="/forgotPassword">Forget Password?</a>
        <button type="submit">Sign In</button>
    </form>
